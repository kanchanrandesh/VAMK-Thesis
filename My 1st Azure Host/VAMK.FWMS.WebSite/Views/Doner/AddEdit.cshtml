@{
    Layout = null;
}
<style>
    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
        display: none !important;
    }
</style>
<!-- BEGIN PAGE HEADER-->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a ui-sref="dashboard">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="donerList">Donors</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="donerAddEdit">{{pageTitle}}</a>
        </li>
    </ul>
    <div class="page-toolbar">
        <span class="col-md-1 glyphicon glyphicon-arrow-left" style="margin-top:.25em; font-size:1.5em;cursor:pointer; color:#23527c" ui-sref="donerList"></span>
        <div class="btn-group pull-right">
            <button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" dropdown-menu-hover data-delay="1000" data-close-others="true">
                Actions
                <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="#">
                        <i class="icon-trash" style="font-weight:bold;"></i> Delete
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN MAIN CONTENT -->
<div class="note note-success">
    <h3>{{headerTitle}}</h3>
    <p>{{headerDescription}}</p>
</div>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Donor Details
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="#" name="frmDonerAddEdit" class="form-horizontal form-bordered">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">Code</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="code_input" ng-model="doner.code" maxlength="20" required>
                                <span class="fieldError" ng-cloak ng-show="frmDonerAddEdit.code_input.$dirty && frmDonerAddEdit.code_input.$invalid">
                                    <span ng-show="frmDonerAddEdit.code_input.$error.required">Code is required</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Name</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="name_input" ng-model="doner.name" maxlength="200" required>
                                <span class="fieldError" ng-cloak ng-show="frmDonerAddEdit.name_input.$dirty && frmDonerAddEdit.name_input.$invalid">
                                    <span ng-show="frmDonerAddEdit.name_input.$error.required">Name is required</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Address</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="address_input" ng-model="doner.address" maxlength="200" required>
                                <span class="fieldError" ng-cloak ng-show="frmDonerAddEdit.address_input.$dirty && frmDonerAddEdit.address_input.$invalid">
                                    <span ng-show="frmDonerAddEdit.address_input.$error.required">Address is required</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Location Coordinates</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="location_input" ng-model="doner.location" maxlength="200" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="portlet light bordered">
                                <div class="portlet-title" style="border-bottom:none;margin-bottom:0">
                                    <div class="caption font-green-sharp">
                                        <i class="icon-settings font-green-sharp"></i>
                                        <span class="caption-subject bold uppercase">Contact Person(s) Details</span>
                                    </div>
                                    <div class="tools">
                                        <a href="" class="collapse"> </a>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <div ng-repeat="contactPerson in doner.contactPersonList">
                                        <ng-form name="frmContactPerson">
                                            <div class="row form-group" style="border:none">
                                                <div class="row-container">
                                                    <div class="row">
                                                        <button type="button" class="close pull-right row-container-close"
                                                                data-dismiss="modal" aria-label="Close"
                                                                ng-click="deleteContactPerson(contactPerson)">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-2">
                                                            <label class="control-label" style="text-align:left;padding-top:0 !important">Code</label>
                                                            <input class="form-control" ng-model="contactPerson.code" name="contactPersonCode" required />
                                                            <span class="fieldError" ng-cloak ng-show="frmContactPerson.contactPersonCode.$dirty && frmContactPerson.contactPersonCode.$invalid">
                                                                <span ng-show="frmContactPerson.contactPersonCode.$error.required">Code is required</span>
                                                            </span>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <label class="control-label" style="text-align:left;padding-top:0 !important">Name</label>
                                                            <input class="form-control" ng-model="contactPerson.name" name="contactPersonName" required />
                                                            <span class="fieldError" ng-cloak ng-show="frmContactPerson.contactPersonName.$dirty && frmContactPerson.contactPersonName.$invalid">
                                                                <span ng-show="frmContactPerson.contactPersonName.$error.required">Name is required</span>
                                                            </span>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <label class="control-label" style="text-align:left;padding-top:0 !important">Email</label>
                                                            <input class="form-control" ng-model="contactPerson.email" name="contactPersonEmail" required />
                                                            <span class="fieldError" ng-cloak ng-show="frmContactPerson.contactPersonEmail.$dirty && frmContactPerson.contactPersonEmail.$invalid">
                                                                <span ng-show="frmContactPerson.contactPersonEmail.$error.required">Email is required</span>
                                                            </span>
                                                        </div>
                                                        <div class="col-md-2">
                                                            <label class="control-label" style="text-align:left;padding-top:0 !important">Phone</label>
                                                            <input class="form-control" ng-model="contactPerson.phoneNumber" name="contactPersonCategory" required />
                                                            <span class="fieldError" ng-cloak ng-show="frmContactPerson.contactPersonPhoneNumber.$dirty && frmContactPerson.contactPersonPhoneNumber.$invalid">
                                                                <span ng-show="frmContactPerson.contactPersonPhoneNumber.$error.required">Phone is required</span>
                                                            </span>
                                                        </div>
                                                        <div class="col-md-2">
                                                            <label class="control-label" style="text-align:left;padding-top:0 !important">Mobile</label>
                                                            <input class="form-control" ng-model="contactPerson.mobile" name="contactPersonMobile" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </ng-form>
                                    </div>
                                    <div style="margin-top:1em; margin-bottom:1em">
                                        <a style="cursor:pointer;" ng-click="addNewContactPerson()">
                                            <div>
                                                <span>New Contact Person</span>
                                                <span class="glyphicon glyphicon-plus pull-left" aria-hidden="true" style="color: #0a6aa1;margin-right:.5em"></span>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="button" class="btn purple" ng-click="save(doner,frmDonerAddEdit)" ng-disabled="frmDonerAddEdit.$invalid">
                                    <i class="fa fa-check"></i> Submit
                                </button>
                                <button type="button" class="btn default" ng-click="cancel()">Cancel</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
<span ng-bind="name"></span>
<!-- END MAIN CONTENT -->
<!-- BEGIN MAIN JS-->
<script>
    ComponentsFormTools.init(); // init todo page
    ComponentsSelect2.init(); // init todo page
    ComponentsBootstrapSelect.init(); // init todo page
</script>
<!-- BEGIN MAIN JS -->
