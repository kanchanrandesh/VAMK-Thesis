
@{
    Layout = null;
}
<!-- BEGIN PAGE HEADER-->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a ui-sref="dashboard">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="eventList">Events</a>
        </li>
    </ul>
    <div class="page-toolbar">
        <div class="btn-group pull-right">
            <button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" dropdown-menu-hover data-delay="1000" data-close-others="true">
                Actions
                <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="#">
                        <i class="icon-film" style="color:red"></i>Export to PDF
                        <span class="icon-printer"></span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!--<h3 class="page-title"> Browse Select-->
<!--<small>AngularJS-native version of Select2</small>-->
<!--</h3>-->
<!-- END PAGE HEADER-->
<!-- BEGIN MAIN CONTENT -->
<div class="note note-success">
    <h3>Events</h3>
    <p>
        Used to maintain details of corporate events orgazined by FWMS <a target="_blank" href="tpl/help.html">Read more</a>
    </p>
    @*<p>
            <a href="http://www.businessdictionary.com/definition/event.html">Read more</a>
        </p>*@
</div>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box blue-hoki">
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form id="eventAdvanceSearch" name="eventAdvanceSearch" class="form-horizontal form-bordered">
                    <div class="form-body">

                    </div>
                    <div class="form-actions" style="border-top: 1px solid #869ab3">
                        <div class="col-md-12">
                            <div class="input-icon right input-group">
                                @*<i class="icon-magnifier" style="margin-right:45px;cursor: pointer; font-weight:bold" ng-click="searchEvent(eventSearch,$event)"></i>*@
                                <span class="input-group-addon" style="border-left:1px solid #ccc; border-right: none; background-color: lightseagreen;cursor:pointer;" id="new" data-toggle="modal" data-target="#exampleModal" ui-sref="eventAddEdits({id : 0,title :'Add Event' })">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true" style="display: inline!important; color: white"></span>
                                </span>
                                <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" ng-model="eventSearch.searchText" ng-keyup="searchEvent(eventSearch,$event)" ng-keypress="searchEvent(eventSearch,$event)">
                                <span class="input-group-addon" style="cursor:pointer;" id="advanceSearch" data-toggle="collapse" href="#advanceSearchContainer" aria-expanded="false" aria-controls="collapseExample">
                                    <span class="glyphicon glyphicon-filter" aria-hidden="true" style="display: inline!important;"></span>
                                </span>
                            </div>
                            <div class="collapse" id="advanceSearchContainer" style="border:1px solid #869ab3; background-color:white" ng-aria-expanded="eventSearch.isExpanded">
                                <div class="" style="padding-top:20px; padding-left:5px;padding-right:5px; height: 150px">
                                    <div class="col-md-12">
                                        <div style="padding-top:5px;padding-left:15px; padding-right:15px">
                                            <div class="col-md-4">
                                                <label>Name</label>
                                                <input class="form-control" ng-model="eventSearch.name" />
                                            </div>
                                            <div class="col-md-4">
                                                <label> Notes</label>
                                                <input class="form-control" ng-model="eventSearch.notes" />
                                            </div>
                                            <div class="col-md-4">
                                                <label>Venue</label>
                                                <input class="form-control" ng-model="eventSearch.venueName" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-2" style="padding-top:5px;padding-left:30px; padding-right:15px">
                                            <button class="form-control btn purple" style="margin-top:1em;margin-right:1em" ng-click="searchEvent(eventSearch,$event)">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="portlet-body form-body">
                    <div style="padding: 10px" class="datagrid">
                        <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                            <thead>
                                <tr>
                                    <th>Edit</th>
                                    <th>Home</th>
                                    <th>Name </th>
                                    <th>Date </th>
                                    <th>Time</th>
                                    <th>Venue </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX" ng-repeat="row in eventList">
                                    <td style="width:50px; text-align:center;">
                                        <span class="glyphicon glyphicon-edit" aria-hidden="true" style="cursor:pointer;"
                                              data-toggle="modal" ui-sref="eventAddEdits({id : row.id,title :'Edit Event' })"></span>
                                    </td>
                                    <td style="width:50px; text-align:center;">
                                        <span class="glyphicon glyphicon-home" aria-hidden="true" style="cursor:pointer;"
                                              data-toggle="modal" ui-sref="eventHome({eventId : row.id })"></span>
                                    </td>
                                    <td>{{row.name}} </td>
                                    <td>{{row.date}}</td>
                                    <td>{{row.time}}</td>
                                    <td>{{row.venue}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
<span ng-bind="name"></span>
<!-- END MAIN CONTENT -->
<!-- BEGIN MAIN JS-->
<script>
    ComponentsDateTimePickers.init(); // init todo page
    ComponentsFormTools.init(); // init todo page
    ComponentsSelect2.init(); // init todo page
    ComponentsBootstrapSelect.init(); // init todo page
    $('#advanceSearch').click(function () {
        $('#collapseExample').collapse('toggle');
    });
</script>
<!-- BEGIN MAIN JS -->
