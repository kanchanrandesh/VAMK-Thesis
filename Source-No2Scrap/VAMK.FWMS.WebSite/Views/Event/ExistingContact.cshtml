@{
    Layout = null;
}
<style>
    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
        display: none !important;
    }
</style>
<!-- BEGIN PAGE HEADER-->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a ui-sref="dashboard">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="eventList">Events</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="eventHome({eventId: {{eventId}}})">Event Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="eventExistingContact">Existing Contacts</a>
        </li>
    </ul>
    <div class="page-toolbar">
        <span class="col-md-1 glyphicon glyphicon-arrow-left" style="margin-top:.25em; font-size:1.5em;cursor:pointer; color:#23527c" ui-sref="eventHome({eventId: {{eventId}}})"></span>
        <div class="btn-group pull-right">
        </div>
    </div>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN MAIN CONTENT -->
<div class="note note-success">
    <h3>Invite Existing Contacts</h3>
    <p>You can select multiple Contacts from below table and mark them as Invitees of the selected Event</p>
</div>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box blue-hoki">
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="#" name="frmEventExistingContact" class="form-horizontal form-bordered">
                    <div class="form-body"></div>
                    <div class="form-actions" style="border-top: 1px solid #869ab3">
                        <div class="col-md-12">
                            <div class="input-icon right input-group">
                                <input type="text" class="form-control" ng-model="searchQuery.searchText" ng-keyup="search(searchQuery)">
                                <span class="input-group-addon" style="cursor:pointer;" id="advanceSearch" data-toggle="collapse" href="#advanceSearchContainer" aria-expanded="false" aria-controls="collapseExample">
                                    <span class="glyphicon glyphicon-filter" aria-hidden="true" style="display: inline!important;"></span>
                                </span>
                            </div>
                            <div class="collapse" id="advanceSearchContainer" style="border:1px solid #869ab3; background-color:white">
                                <div class="panel" style="padding-top:20px; padding-left:5px;padding-right:5px">
                                    <div class="row">
                                        <div style="padding-top:5px;padding-left:15px; padding-right:15px">
                                            <div class="col-md-4">
                                                <label>Organization</label>
                                                <select class="form-control select2" ng-model="searchQuery.organization" ng-options="obj.name for obj in organizations track by obj.id"></select>
                                            </div>
                                            <div class="col-md-4">
                                                <label>Account Manager</label>
                                                <select class="form-control select2" ng-model="searchQuery.accountManager" ng-options="obj.displayName for obj in employees track by obj.id"></select>
                                            </div>
                                            <div class="col-md-3">
                                                <label>&nbsp;Designation Categories</label>
                                                <ul style="-webkit-padding-start:0px;">
                                                    <li style="list-style:none;" ng-repeat="cat in srchDesignationCategories">
                                                        <input type="checkbox" ng-model="cat.hasSelected" checklist-value="cat.id" style="width:25px;"><span style="vertical-align:top;">{{cat.description}}</span> 
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2" style="padding-left:30px;padding-top:10px;">
                                            <button type="button" class="btn purple" ng-click="search(searchQuery)">Search</button>
                                        </div>
                                        <div class="col-md-9">
                                        </div>
                                        <div class="col-md-1">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div style="padding-bottom:0px;padding-top:20px;padding-left:30px">
                    <button type="button" class="btn blue-dark" ng-click="addToList()"><span style="padding-right:5px; color:white; font-weight:bold;">+</span> Add to Invitee List</button>
                </div>
                <div class="portlet-body form-body" style="padding-top:6px;">
                    <div style="padding: 10px" class="datagrid">
                        <table class="table table-striped table-bordered table-hover table-checkable order-column" id="eventExistingContact_dataTable">
                            <thead>
                                <tr>
                                    <th> </th>
                                    <th> Name </th>
                                    <th> Organization </th>
                                    <th> Job Role </th>
                                    <th> Department </th>
                                    <th> Account Manager </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX" ng-repeat="row in contactList">
                                    <td>
                                        <input type="checkbox" ng-model="row.hasSelected">
                                    </td>
                                    <td>{{row.title}} {{row.firstName}} {{row.lastName}}</td>
                                    <td>{{row.organizationName}}</td>
                                    <td>{{row.jobRole}}</td>
                                    <td>{{row.department}}</td>
                                    <td>{{row.accountManager}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
<!-- END MAIN CONTENT -->
<!-- BEGIN MAIN JS-->
<script>
    ComponentsFormTools.init(); // init todo page
    ComponentsSelect2.init(); // init todo page
    ComponentsBootstrapSelect.init(); // init todo page

    $('#advanceSearch').click(function () {
        $('#advanceSearchArea').collapse('toggle');
    });
</script>
<!-- BEGIN MAIN JS -->
