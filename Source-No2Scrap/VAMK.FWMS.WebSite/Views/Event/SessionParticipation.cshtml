@{
    Layout = null;
}
<style>
    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
        display: none !important;
    }
</style>
<!-- BEGIN PAGE HEADER-->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a ui-sref="dashboard">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="eventList">Events</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="eventHome({eventId: {{eventId}}})">Event Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a>Session Participation</a>
        </li>
    </ul>
    <div class="page-toolbar">
        <span class="col-md-1 glyphicon glyphicon-arrow-left" style="margin-top:.25em; font-size:1.5em;cursor:pointer; color:#23527c" ui-sref="eventHome({eventId: {{eventId}}})"></span>
        <div class="btn-group pull-right">
            <button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" dropdown-menu-hover data-delay="1000" data-close-others="true">
                Actions
                <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a>
                        <i class="icon-printer" style="color:red"></i> Print
                    </a>
                </li>
            </ul>
        </div>

    </div>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN MAIN CONTENT -->
<div class="row">
    <div class="col-md-10">
        <div class="note note-success">
            <h3>{{sessionName}}</h3>
            <p>{{trackName}}</p>
        </div>
    </div>
    <div class="col-md-2">
        <!-- BEGIN DASHBOARD STATS -->
        <div class="row">
            <div class="col-md-12">
                <div class="dashboard-stat red">
                    <div class="visual" style="height:40px">
                        <i class="fa fa-bar-chart-o"></i>
                    </div>
                    <div class="details">
                        <div class="number" style="padding-top:0px"> {{participantCount}} </div>
                        <div class="desc"> Attended </div>
                    </div>
                    <a class="more" href="#">
                        View more
                        <i class="m-icon-swapright m-icon-white"></i>
                    </a>
                </div>
            </div>
        </div>
        <!-- END DASHBOARD STATS -->
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box blue-hoki">
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="#" name="frmEventHome" class="form-horizontal form-bordered">
                    <div class="form-body"></div>
                    <div class="form-actions" style="border-top: 1px solid #869ab3">
                        <div class="col-md-12">
                            <div class="input-icon right input-group">
                                <input type="text" class="form-control" ng-model="searchQuery.searchText" ng-change="searchParticipants(searchQuery)">
                                <span class="input-group-addon" style="cursor:pointer;" id="advanceSearch" data-toggle="collapse" href="#advanceSearchContainer" aria-expanded="false" aria-controls="collapseExample">
                                    <span class="glyphicon glyphicon-filter" aria-hidden="true" style="display: inline!important;"></span>
                                </span>
                            </div>
                            <div class="collapse" id="advanceSearchContainer" style="border:1px solid #869ab3; background-color:white">
                                <div class="panel" style="padding-top:20px; padding-left:5px;padding-right:5px">
                                    <div class="row">
                                        <div style="padding-top:5px;padding-left:15px; padding-right:15px">
                                            <div class="col-md-4">
                                                <label>Organization</label>
                                                <select class="form-control select2" ng-model="selectedOrganization" ng-options="obj.name for obj in organizations track by obj.id"></select>
                                            </div>
                                            <div class="col-md-4">
                                                <label>Account Manager</label>
                                                <select class="form-control select2" ng-model="selectedAccountManager" ng-options="obj.displayName for obj in employees track by obj.id"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2" style="padding-left:30px;padding-top:10px;">
                                            <button type="button" class="btn purple" ng-click="searchParticipants(searchQuery)">Search</button>
                                        </div>
                                        <div class="col-md-9">
                                        </div>
                                        <div class="col-md-1">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div style="padding-bottom:0px;padding-top:20px;padding-left:30px; padding-right:30px; text-align:right;">
                    <button type="button" class="btn purple-plum" ng-click="fillFromPrevious()">Fill From Previous Session</button>
                </div>
                <div class="portlet-body form-body" style="padding-top:6px;">
                    <div style="padding: 10px" class="datagrid">
                        <table class="table table-striped table-bordered table-hover table-checkable order-column" id="eventInvitee_dataTable">
                            <thead>
                                <tr>
                                    <th> Number </th>
                                    <th> Organization </th>
                                    <th> Name </th>
                                    <th> Mobile </th>
                                    <th> AM </th>
                                    <th> Attended? </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX" ng-repeat="row in participationList">
                                    <td>{{row.displayNumber}} </td>
                                    <td>{{row.displayOrganization}}</td>
                                    <td>{{row.displayName}}</td>
                                    <td>{{row.displayMobile}}</td>
                                    <td>{{row.displayAccountManager}}</td>
                                    <td>
                                        <input type="checkbox" ng-model="row.hasParticipated" ng-change="saveParticipation(row.eventParticipantId)">
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
<!-- END MAIN CONTENT -->
<!-- BEGIN MAIN JS-->
<script>
    ComponentsFormTools.init(); // init todo page
    ComponentsSelect2.init(); // init todo page
    ComponentsBootstrapSelect.init(); // init todo page

    $('#advanceSearch').click(function () {
        $('#advanceSearchArea').collapse('toggle');
    });
</script>
<!-- BEGIN MAIN JS -->
