                        <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                            <thead>
                                <tr>
                                    <th width="10%">Download</th>
                                    <th width="50%">Name</th>
                                    <th width="30%">Uploaded </th>
                                    <th width="10%">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX" ng-repeat="row in eventFiles.files">
                                    <td>
                                        <label class="mt-checkbox mt-checkbox-outline mt-checkbox-single" style="padding:0 !important;margin:0">
                                            <a href="api/Event/downloadFile/{{row.fileId}}" target="_blank" style="padding:0 !important;margin:0">
