<div class="note note-success">
    <h3>Groups</h3>
    <p>
        Used to define the user groups to assign the access permissions <a href="http://www.businessdictionary.com/definition/usergroup.html">Read more</a>
    </p>
</div>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box blue-hoki">
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="#" id="form-groupIndex" class="form-horizontal form-bordered">
                    <div class="form-body"></div>
                    <div class="form-actions" style="border-top: 1px solid #869ab3">
                        <div class="col-md-12">
                            <div class="input-icon right input-group">
                                <span class="input-group-addon" style="border-left:1px solid #ccc; border-right: none; background-color: lightseagreen;cursor:pointer;" id="new" data-toggle="modal" data-target="#exampleModal">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true" style="display: inline!important; color: white" ui-sref="groupAddEdit({pageTitle :'Add Group', id : 0 })"></span>
                                </span>
                                <input type="text" class="form-control" ng-model="searchQuery.searchText" ng-keyup="search(searchQuery)">
                                <span class="input-group-addon" style="cursor:pointer;" id="advanceSearch" data-toggle="collapse" href="#advanceSearchContainer" aria-expanded="false" aria-controls="collapseExample">
                                    <span class="glyphicon glyphicon-filter" aria-hidden="true" style="display: inline!important;"></span>
                                </span>
                            </div>
                            <div class="collapse" id="advanceSearchContainer" style="border:1px solid #869ab3; background-color:white">
                                <div class="panel" style="padding-top:20px; padding-left:5px;padding-right:5px">
                                    <div class="row">
                                        <div style="padding-top:5px;padding-left:15px; padding-right:15px">
                                            <div class="col-md-4">
                                                <label>Description</label>
                                                <input class="form-control" ng-model="searchQuery.description" />
                                            </div>
                                            <div class="col-md-4">
                                                <label>Status</label>
                                                <select class="form-control select2" ng-model="searchQuery.status">
                                                    <option value="All">All</option>
                                                    <option value="Active">Active</option>
                                                    <option value="Inactive">Inactive</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2" style="padding-left:30px;padding-top:10px;">
                                            <button type="button" class="btn purple" ng-click="search(searchQuery)">Search</button>
                                        </div>
                                        <div class="col-md-9">
                                        </div>
                                        <div class="col-md-1">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="portlet-body form-body">
                    <div style="padding: 10px" class="datagrid">
                        <table class="table table-striped table-bordered table-hover table-checkable order-column" id="group_dataTable">
                            <thead>
                                <tr>
                                    <th style="width:50px;"> </th>
                                    <th style="width:50px;"> </th>
                                    <th style="width:50px;"> </th>
                                    <th> Description </th>
                                    @*<th> Full Control to Sales </th>*@
                                    <th> Active </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX" ng-repeat="row in searchList">
                                    <td style="width:50px;">
                                        <span style="cursor:pointer;" class="glyphicon glyphicon-edit" aria-hidden="true" uib-tooltip="Edit" tooltip-placement="top"
                                              data-toggle="modal" ui-sref="groupAddEdit({pageTitle :'Edit Group', id : row.id })"></span>
                                    </td>
                                    <td style="text-align:center; width:50px;">
                                        <span style="cursor:pointer;" class="icon icon-users" aria-hidden="true" uib-tooltip="User Allocation" tooltip-placement="top"
                                              data-toggle="modal" ui-sref="groupUsers({pageTitle :'Group Users', id : row.id })"></span>
                                    </td>
                                    <td style="text-align:center; width:50px;">
                                        <span style="cursor:pointer;" class="icon icon-key" aria-hidden="true" uib-tooltip="Group Rule" tooltip-placement="top"
                                              data-toggle="modal" ui-sref="groupRules({pageTitle :'Group Rules', id : row.id })"></span>
                                    </td>
                                    <td>{{row.description}}</td>
                                    @*<td>{{row.salesFullControl?'Yes':'No'}}</td>*@
                                    <td>{{row.isActive?'Yes':'No'}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
<span ng-bind="name"></span>
<!-- END MAIN CONTENT -->
