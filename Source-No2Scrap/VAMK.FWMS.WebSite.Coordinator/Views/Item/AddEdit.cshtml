@{
    Layout = null;
}
<style>
    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
        display: none !important;
    }
</style>
<!-- BEGIN PAGE HEADER-->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a ui-sref="dashboard">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="itemList">Items</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="itemAddEdit">{{pageTitle}}</a>
        </li>
    </ul>
    <div class="page-toolbar">
        <span class="col-md-1 glyphicon glyphicon-arrow-left" style="margin-top:.25em; font-size:1.5em;cursor:pointer; color:#23527c" ui-sref="itemList"></span>
        <div class="btn-group pull-right">
            @*<button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" dropdown-menu-hover data-delay="1000" data-close-others="true">
                Actions
                <i class="fa fa-angle-down"></i>
            </button>*@
            @*<ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="#">
                        <i class="icon-trash" style="font-weight:bold;"></i> Delete
                    </a>
                </li>
            </ul>*@
        </div>
    </div>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN MAIN CONTENT -->
<div class="note note-success">
    <h3>{{headerTitle}}</h3>
    <p>{{headerDescription}}</p>
</div>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Item Details
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="#" name="frmItemAddEdit" class="form-horizontal form-bordered">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">Code</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="code_input" ng-model="item.code" maxlength="20" required>
                                <span class="fieldError" ng-cloak ng-show="frmItemAddEdit.code_input.$dirty && frmItemAddEdit.code_input.$invalid">
                                    <span ng-show="frmItemAddEdit.code_input.$error.required">Code is required</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Name</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="name_input" ng-model="item.name" maxlength="200" required>
                                <span class="fieldError" ng-cloak ng-show="frmItemAddEdit.name_input.$dirty && frmItemAddEdit.name_input.$invalid">
                                    <span ng-show="frmItemAddEdit.name_input.$error.required">Name is required</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Item Category</label>
                            <div class="col-md-4">
                                <select class="form-control select2" ng-model="item.itemCategory">
                                    <option value="BakeryItems">Bakery Items</option>
                                    <option value="SpicesAndCondiments">Spices and Condiments</option>
                                    <option value="Fruits">Fruits</option>
                                    <option value="Vegetables">Vegetables</option>
                                    <option value="DairyFoods">Dairy Foods</option>
                                    <option value="MeatAndPoultryFoods">Meat and Poultry Foods</option>
                                    <option value="Seafoods">Seafoods</option>
                                    <option value="GrainsAndCereals">Grains and Cereals</option>
                                    <option value="NutsAndSeeds">Nuts and Seeds</option>
                                    <option value="LegumesAndBeans">Legumes and Beans</option>
                                    <option value="ProcessedFoods">Processed Foods</option>
                                    <option value="Beverages">Beverages</option>
                                    <option value="SnacksAndConfectioneryFoods">Snacks and Confectionery Foods</option>
                                    <option value="OtherFoods">Other Foods</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Unit of Measurement</label>
                            <div class="col-md-4">
                                <select class="form-control select2" ng-model="selectedUnit" ng-options="obj as obj.name for obj in units track by obj.id"></select>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="button" class="btn purple" ng-click="save(item,frmItemAddEdit)" ng-disabled="frmItemAddEdit.$invalid">
                                    <i class="fa fa-check"></i> Submit
                                </button>
                                <button type="button" class="btn default" ng-click="cancel()">Cancel</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
<span ng-bind="name"></span>
<!-- END MAIN CONTENT -->
<!-- BEGIN MAIN JS-->
<script>
    ComponentsFormTools.init(); // init todo page
    ComponentsSelect2.init(); // init todo page
    ComponentsBootstrapSelect.init(); // init todo page
</script>
<!-- BEGIN MAIN JS -->

